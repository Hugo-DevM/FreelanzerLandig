---
import Layout from "../layout/Layout.astro";
const shareUrl = "https://freelanzer.app";
const shareText =
  "Únete a Freelanzer, la plataforma para freelancers en LATAM.";
const pageTitle = "Únete a Freelanzer — Plataforma para freelancers LATAM";
const pageDescription =
  "Genera contratos con IA, gestiona pagos e impuestos y trabaja como freelancer de forma profesional.";
const ogImage = "https://freelanzer.app/images/Freelanzer.png";

import CopyButton from "../components/CopyButton.tsx";
---

<Layout
  title={pageTitle}
  description={pageDescription}
  ogImage={ogImage}
  ogUrl={shareUrl}
>
  <script>
    function copyLink() {
      const text = "https://freelanzer.app/";
      navigator.clipboard.writeText(text);
      const feedback = document.getElementById("copy-feedback");
      feedback?.classList.remove("opacity-0");
      feedback?.classList.add("opacity-100");

      setTimeout(() => {
        feedback?.classList.remove("opacity-100");
        feedback?.classList.add("opacity-0");
      }, 2000);
    }
  </script>

  <section
    class="min-h-screen flex items-center justify-center text-white px-4 font-rubik relative overflow-hidden"
  >
    <!-- Logo1 como fondo decorativo -->
    <div class="absolute inset-0 pointer-events-none">
      <!-- Logo1 en esquina superior derecha -->
      <div class="absolute top-8 right-8">
        <img src="/images/logo1.png" alt="" class="w-24 h-24" />
      </div>
      <!-- Logo1 en esquina inferior izquierda -->
      <div class="absolute bottom-8 left-8">
        <img src="/images/logo1.png" alt="" class="w-20 h-20" />
      </div>
      <!-- Logo1 en el centro superior -->
      <div class="absolute top-1/4 left-1/4">
        <img src="/images/logo1.png" alt="" class="w-16 h-16" />
      </div>
      <!-- Logo1 en el centro inferior -->
      <div class="absolute bottom-1/4 right-1/4">
        <img src="/images/logo1.png" alt="" class="w-18 h-18" />
      </div>
      <!-- Logo1 adicional en el centro -->
      <div class="absolute top-1/3 right-1/3">
        <img src="/images/logo1.png" alt="" class="w-14 h-14" />
      </div>
      <!-- Logo1 en esquina superior izquierda -->
      <div class="absolute top-1/2 left-8">
        <img src="/images/logo1.png" alt="" class="w-12 h-12" />
      </div>
      <!-- Logo1 en esquina inferior derecha -->
      <div class="absolute bottom-1/3 right-1/3">
        <img src="/images/logo1.png" alt="" class="w-10 h-10" />
      </div>
    </div>

    <div class="w-full max-w-md text-center space-y-6 relative z-10">
      <div class="flex justify-center">
        <img
          src="/images/logo2.png"
          alt="Freelanzer Logo"
          class="h-24 w-auto"
        />
      </div>

      <h1 class="text-2xl sm:text-3xl font-semibold">
        Ya estás en la lista de espera
      </h1>
      <p class="text-sm text-gray-400">
        Has asegurado tu lugar correctamente. ¿Emocionado? <br />
        Comparte el enlace para llegar a mas gente como tú.
      </p>

      <CopyButton client:load />

      <div class="border-t border-gray-800 pt-10">
        <p class="text-sm text-gray-500 mb-2">o compártelo en:</p>
        <div class="flex justify-center gap-3">
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(shareUrl)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="w-12 h-12 bg-[#0C0C0C] border border-white rounded-md flex items-center justify-center hover:text-black transition"
          >
            <img src="images/x.png" alt="Compartir en X" class="w-6 h-6" />
          </a>

          <a
            href={`https://api.whatsapp.com/send?text=${encodeURIComponent(shareText + " " + shareUrl)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="w-12 h-12 bg-green-500 rounded-md flex items-center justify-center hover:bg-green-600 transition"
          >
            <img
              src="images/whatsapp.png"
              alt="Compartir en WhatsApp"
              class="w-6 h-6"
            />
          </a>

          <a
            href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="w-12 h-12 bg-[#1877F2] rounded-md flex items-center justify-center hover:bg-blue-700 transition"
          >
            <img
              src="images/facebook.png"
              alt="Compartir en Facebook"
              class="w-6 h-6"
            />
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
